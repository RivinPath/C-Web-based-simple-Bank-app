@{
    ViewData["Title"] = "Login Page";
}
<!-- Most of the styling was taken from bootstrap apart from the normal site.css, this is because visual studio has bootstrap in it -->
<!-- Referred:  https://getbootstrap.com/docs/5.3 -->
<div class="text-center">
    <h1 class="display-4">Login to DC Bank</h1>
    <div class="form-group">
        <label for="loginId">Login ID</label>
        <input type="text" id="loginId" name="loginId" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" required />
    </div>
    <button type="button" class="login-button" onclick="login()">Login</button>
</div>
<script src="~/js/site.js" defer></script>

