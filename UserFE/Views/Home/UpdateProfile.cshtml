@{
    ViewData["Title"] = "Update Profile";
}
<!-- Most of the styling was taken from bootstrap apart from the normal site.css, this is because visual studio has bootstrap in it -->
<!-- Referred:  https://getbootstrap.com/docs/5.3 -->
<div class="container text-center">
    <h1 class="display-4">Update Profile</h1>

    <div class="update-profile">
        <h2>Update Your Information</h2>
        <div class="form-group">
            <label for="updateEmail">Email:</label>
            <input type="email" id="updateEmail" class="form-control" placeholder="Enter new email" required />
        </div>
        <div class="form-group">
            <label for="updatePhone">Phone:</label>
            <input type="text" id="updatePhone" class="form-control" placeholder="Enter new phone" required />
        </div>
        <div class="form-group">
            <label for="updatePassword">Password:</label>
            <input type="password" id="updatePassword" class="form-control" placeholder="Enter new password" required />
        </div>
        <button class="btn btn-primary" onclick="updateAccount()">Update</button>
    </div>
</div>
