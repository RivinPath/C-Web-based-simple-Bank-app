@{
    ViewData["Title"] = "Transaction History";
}
<!-- Most of the styling was taken from bootstrap apart from the normal site.css, this is because visual studio has bootstrap in it -->
<!-- Referred:  https://getbootstrap.com/docs/5.3 -->
<div class="container">
    <h1 class="display-4 text-center">Transaction History</h1>

    <button id="loadTransactionsButton" class="btn btn-primary mb-3" onclick="showTransactions()">Load Transactions</button>

   

    <div class="mb-3">
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" class="form-control" />

        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" class="form-control" />
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Transaction ID</th>
                <th>Amount</th>
                <th>Description</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody id="transactionTableBody">
            <!-- Transactions would be added dynamically through script.js-->
        </tbody>
    </table>
</div>

<script src="~/js/site.js" defer></script>
