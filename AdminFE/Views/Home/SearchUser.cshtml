@{
    ViewData["Title"] = "Search User";
}
<!-- Most of the styling was taken from bootstrap apart from the normal site.css, this is because visual studio has bootstrap in it -->
<!-- Referred:  https://getbootstrap.com/docs/5.3 -->
<h1>Search User</h1>

<div class="container">
    <h2>Search User</h2>

    <div class="form-group">
        <label for="searchById">Search by User ID</label>
        <input type="text" id="searchById" class="form-control" placeholder="Enter User ID" />
    </div>

    <div class="form-group">
        <label for="searchByName">Search by Name</label>
        <input type="text" id="searchByName" class="form-control" placeholder="Enter Name" />
    </div>

    <button id="searchButton" class="btn btn-primary" onclick="searchUser()">Search</button>

    <h3>User Details</h3>
    <div id="userDetails" class="user-details" ></div>
</div>

<script src="~/js/site.js" defer></script>