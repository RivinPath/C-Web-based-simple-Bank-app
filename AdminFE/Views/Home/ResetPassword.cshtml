@{
    ViewData["Title"] = "Reset Password";
}
<!-- Most of the styling was taken from bootstrap apart from the normal site.css, this is because visual studio has bootstrap in it -->
<!-- Referred:  https://getbootstrap.com/docs/5.3 -->
<h1>Reset Password</h1>

<div class="container">
    <div class="form-group">
        <label for="resetUserId">User ID</label>
        <input type="text" id="resetUserId" class="form-control" placeholder="Enter User ID" />
    </div>

    <div class="form-group">
        <label for="newPassword">New Password</label>
        <input type="password" id="newPassword" class="form-control" placeholder="Enter New Password" />
    </div>

    <button id="resetPasswordButton" class="btn btn-primary" onclick="resetPassword()">Reset Password</button>
</div>

<script src="~/js/site.js" defer></script>