@{
    ViewData["Title"] = "Create User";
}
<!-- Most of the styling was taken from bootstrap apart from the normal site.css, this is because visual studio has bootstrap in it -->
<!-- Referred:  https://getbootstrap.com/docs/5.3 -->
<h2>Create User</h2>

<div>
    <label for="userId">User ID:</label>
    <input type="number" id="userId" name="id" required />
</div>
<br />
<div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />
</div>
<br />
<div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required />
</div>
<br />
<div>
    <label for="address">Address:</label>
    <input type="text" id="address" name="address" required />
</div>
<br />
<div>
    <label for="phone">Phone:</label>
    <input type="tel" id="phone" name="phone" required />
</div>
<br />
<div>
    <label for="picture">Profile Picture URL:</label>
    <input type="url" id="picture" name="picture" />
</div>
<br />
<div>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required />
</div>
<br />
<div>
    <button id="createUserButton" onclick="createUser()">Create User</button>
</div>


<script src="~/js/site.js" defer></script>
